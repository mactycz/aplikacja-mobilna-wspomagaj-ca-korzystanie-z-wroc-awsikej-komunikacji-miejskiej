<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:text="Wybierz linię"
        android:layout_width="match_parent"
        android:layout_height="58.5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/linia" />
    <Button
        android:text="Wybierz przystanek"
        android:layout_width="match_parent"
        android:layout_height="58.5dp"
        android:layout_below="@id/linia"
        android:id="@+id/przystanek" />
    <Button
        android:text="Znajdz najlepsze połączenie"
        android:layout_width="match_parent"
        android:layout_height="58.5dp"
        android:layout_below="@id/przystanek"
        android:id="@+id/znajdz" />

    <TextView
        android:text=""
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/znajdz"
        android:layout_marginTop="100dp"
        android:id="@+id/textView1" />


</RelativeLayout>